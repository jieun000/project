    $(function() {
		  var cnt0 = 1700;

		  counterFn();

		  function counterFn() {

		    id0 = setInterval(count0Fn, 10);

		    function count0Fn() {
		      cnt0++;
		      if (cnt0 > 1980) {
		        clearInterval(id0);
		      } else {
		        $(".number").text(cnt0);
		      }
		    }
		  }
		});
  </script>
	
